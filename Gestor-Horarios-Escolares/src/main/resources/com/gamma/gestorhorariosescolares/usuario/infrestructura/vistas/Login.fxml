<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="400.0" prefWidth="440.0" xmlns="http://javafx.com/javafx/15">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Label alignment="TOP_CENTER" styleClass="h1" text="Sistema de Gestión Escolar" textAlignment="CENTER"
           wrapText="true" GridPane.rowIndex="0">
        <GridPane.margin>
            <Insets left="30.0" right="30.0"/>
        </GridPane.margin>
    </Label>
    <Label styleClass="h4" text="Usuario:" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets left="30.0" right="30.0"/>
        </GridPane.margin>
    </Label>

    <TextField fx:id="txtUsuario" styleClass="h4" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="30" right="30"/>
        </GridPane.margin>
    </TextField>

    <Label styleClass="h4" text="Contraseña:" GridPane.rowIndex="3">
        <GridPane.margin>
            <Insets left="30.0" right="30.0"/>
        </GridPane.margin>
    </Label>

    <TextField fx:id="txtClaveAcceso" styleClass="h4" GridPane.rowIndex="4">
        <GridPane.margin>
            <Insets left="30" right="30"/>
        </GridPane.margin>
    </TextField>

    <Button fx:id="btnIngresar" text="Ingresar" mnemonicParsing="false" GridPane.rowIndex="5" prefWidth="380.0"
            onAction="#ingresarClick">
        <GridPane.margin>
            <Insets left="30" right="30" top="30" bottom="30"/>
        </GridPane.margin>
        <styleClass>
            <String fx:value="h4"/>
            <String fx:value="btn-primary"/>
        </styleClass>
    </Button>
</GridPane>
