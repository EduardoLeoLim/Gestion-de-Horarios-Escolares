<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="400.0" prefWidth="440.0" style="-fx-background-color: EFEFEF;" xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <Label alignment="TOP_CENTER" styleClass="h1" text="Sistema de Gestión Escolar" textAlignment="CENTER" wrapText="true" GridPane.rowIndex="0">
        <GridPane.margin>
            <Insets left="30.0" right="30.0" />
        </GridPane.margin>
    </Label>
    <Label styleClass="h4" text="Usuario:" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets left="30.0" right="30.0" />
        </GridPane.margin>
    </Label>

    <TextField fx:id="txtUsuario" styleClass="h4" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets left="30" right="30" />
        </GridPane.margin>
    </TextField>

    <Label styleClass="h4" text="Contraseña:" GridPane.rowIndex="3">
        <GridPane.margin>
            <Insets left="30.0" right="30.0" />
        </GridPane.margin>
    </Label>

    <TextField fx:id="txtClaveAcceso" styleClass="h4" GridPane.rowIndex="4">
        <GridPane.margin>
            <Insets left="30" right="30" />
        </GridPane.margin>
    </TextField>

    <Button fx:id="btnIngresar" mnemonicParsing="false" onAction="#ingresarClick" prefWidth="380.0" text="Ingresar" GridPane.rowIndex="5">
        <GridPane.margin>
            <Insets bottom="30" left="30" right="30" top="30" />
        </GridPane.margin>
        <styleClass>
            <String fx:value="h4" />
            <String fx:value="btn-primary" />
        </styleClass>
    </Button>
</GridPane>
